@page
@model DatabaseProject.Pages.LabTestsModel
@using DatabaseProject.Models;

@{
    ViewData["Title"] = "Lab Tests";
}

<div class="container table-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Lab Tests</h2>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addLabTestModal">
            Add New Lab Test
        </button>
    </div>
    <table class="table table-bordered table-hover table-striped">
        <thead class="table-primary">
            <tr>
                <th>LT_ID</th>
                <th>LT_Name</th>
                <th>LT_Category</th>
                <th>LT_Description</th>
                <th>LT_Price</th>
                <th>Result Time Frame</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var labTest in Model.LabTestslist)
            {
                <tr>
                    <td>@labTest.LT_ID</td>
                    <td>@labTest.LT_name</td>
                    <td>@labTest.LT_category</td>
                    <td>@labTest.LT_price</td>
                    <td>@labTest.LT_description</td>
                    <td>@labTest.Result_time_frame</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Add Lab Test Modal -->
<div class="modal fade" id="addLabTestModal" tabindex="-1" aria-labelledby="addLabTestModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="addLabTestModalLabel">Add New Lab Test</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="LT_Name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="LT_Name" asp-for="NewLabTest.LT_name" required>
                    </div>
                    <div class="mb-3">
                        <label for="LT_Category" class="form-label">Category</label>
                        <input type="text" class="form-control" id="LT_Category" asp-for="NewLabTest.LT_category" required>
                    </div>
                    <div class="mb-3">
                        <label for="LT_Description" class="form-label">Description</label>
                        <textarea class="form-control" id="LT_Description" asp-for="NewLabTest.LT_description" rows="3" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="LT_Price" class="form-label">Price</label>
                        <input type="number" class="form-control" id="LT_Price" asp-for="NewLabTest.LT_price" required>
                    </div>
                    <div class="mb-3">
                        <label for="ResultTimeFrame" class="form-label">Result Time Frame</label>
                        <input type="text" class="form-control" id="ResultTimeFrame" asp-for="NewLabTest.Result_time_frame" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
