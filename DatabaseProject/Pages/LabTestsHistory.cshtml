@page
@model DatabaseProject.Pages.LabTestsHistoryModel
@using DatabaseProject.Models;

@{
    ViewData["Title"] = "Lab Tests History";
}

<div class="container table-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        <a asp-page="CustomerList" class="btn btn-secondary">Back to Customers</a>
    </div>
        <div>
            <dl class="row">
                <dt class="col-sm-2">Name:</dt>
                <dd class="col-sm-10">@Model.selectedCustomer.C_NAME</dd>
                <dt class="col-sm-2">ID:</dt>
                <dd class="col-sm-10">@Model.selectedCustomer.C_ID</dd>
            </dl>
        </div>
    <table class="table table-bordered table-hover table-striped">
        <thead class="table-primary">
            <tr>
                <th>Lab Test ID</th>
                <th>LAb Test Name</th>
                <th>Test Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model.LabTestsRequestslist)
            {
                <tr>
                    <td>@request.LT_ID</td>
                    <td>
                        @Model.LabTestsList.FirstOrDefault(t => t.LT_ID == request.LT_ID)?.LT_name
                    </td>
                    <td>@request.Test_Date.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
</div>