@page
@model DatabaseProject.Pages.DeleteEmployeeModel
@using DatabaseProject.Models;

<h1>Delete Employee</h1>

<h3>Are you sure you want to delete this employee?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.Employee.E_ID</dd>

        <dt class="col-sm-2">Name:</dt>
        <dd class="col-sm-10">@Model.Employee.E_NAME</dd>

        <dt class="col-sm-2">Phone:</dt>
        <dd class="col-sm-10">@Model.Employee.E_Phone</dd>

        <dt class="col-sm-2">Address:</dt>
        <dd class="col-sm-10">@Model.Employee.E_address</dd>

        <dt class="col-sm-2">Salary:</dt>
        <dd class="col-sm-10">@Model.Employee.E_salary</dd>

        <dt class="col-sm-2">Role:</dt>
        <dd class="col-sm-10">@Model.Employee.E_role</dd>

        <dt class="col-sm-2">Age:</dt>
        <dd class="col-sm-10">@Model.Employee.E_age</dd>

        <dt class="col-sm-2">Hire Date:</dt>
        <dd class="col-sm-10">@Model.Employee.Hire_date</dd>

        <dt class="col-sm-2">Department:</dt>
        <dd class="col-sm-10">@Model.Employee.E_department</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Employee.E_ID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="EmployeeList" class="btn btn-secondary">Cancel</a>
</form>
