@page
@model DatabaseProject.Pages.SupplierDetailsModel
@using DatabaseProject.Models;

@{
	ViewData["Title"] = "Pharmacy Supplier Details";
}
<div class="container table-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addSupplierModal">
            Add New Supplier
        </button>
    </div>
    <table class="table table-bordered table-hover table-striped">
        <thead class="table-primary">
            <tr>
                <th>Supplier ID</th>
                <th>Supplier Name</th>
                <th>Supplier Address</th>
                <th>Delivery Day</th>
                <th>Bank Name</th>
                <th>Account Number</th>
                <th>Payment Terms</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var supplier in Model.SupplierList)
            {
                <tr>
                    <td>@supplier.Supplier_ID</td>
                    <td>@supplier.Sup_Name</td>
                    <td>@supplier.Sup_address</td>
                    <td>@supplier.DeliveryDay</td>
                    <td>@supplier.BankName</td>
                    <td>@supplier.Accountnumber</td>
                    <td>@supplier.Payment_Terms</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Add Supplier Modal -->
<div class="modal fade" id="addSupplierModal" tabindex="-1" aria-labelledby="addSupplierLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="addSupplierLabel">Add New Supplier</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="Sup_Name" class="form-label">Supplier Name</label>
                        <input type="text" class="form-control" id="Sup_Name" asp-for="NewSupplier.Sup_Name" required>
                    </div>
                    <div class="mb-3">
                        <label for="Sup_address" class="form-label">Supplier Address</label>
                        <input type="text" class="form-control" id="Sup_address" asp-for="NewSupplier.Sup_address" required>
                    </div>
                    <div class="mb-3">
                        <label for="DeliveryDay" class="form-label">Delivery Day</label>
                        <select class="form-select" id="DeliveryDay" asp-for="NewSupplier.DeliveryDay" required>
                            <option value="" disabled selected>Select Delivery Day</option>
                            <option value="SAT">SAT</option>
                            <option value="SUN">SUN</option>
                            <option value="MON">MON</option>
                            <option value="TUE">TUE</option>
                            <option value="WED">WED</option>
                            <option value="THU">THU</option>
                            <option value="FRI">FRI</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="BankName" class="form-label">Supplier Bank Name</label>
                        <input type="text" class="form-control" id="BankName" asp-for="NewSupplier.BankName" required>
                    </div>
                    <div class="mb-3">
                        <label for="Accountnumber" class="form-label">Supplier Account number</label>
                        <input type="text" class="form-control" id="Accountnumber" asp-for="NewSupplier.Accountnumber" required>
                    </div>
                    <div class="mb-3">
                        <label for="Payment_Terms" class="form-label">Payment Terms</label>
                        <select class="form-select" id="Payment_Terms" asp-for="NewSupplier.Payment_Terms" required>
                            <option value="" disabled selected>Select Payment Terms</option>
                            <option value="CBS">Cash Before Delivery (CBS)</option>
                            <option value="COD">Cash on Delivery (COD)</option>
                        </select>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
